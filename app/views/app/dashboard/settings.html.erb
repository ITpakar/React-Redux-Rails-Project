<div id="wrapper">
  <%= render "app/shared/left" %>
  <div id="page-wrapper" class="navbar-double">
    <% content_for :navbar_bottom do %>
        <ul class="nav nav-tabs deal-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#tab-settings-account" aria-controls="tab-settings-account" role="tab" data-toggle="tab">Account</a></li>
            <li role="presentation"><a href="#tab-settings-billing" aria-controls="tab-settings-billing" role="tab" data-toggle="tab">Billing</a></li>
        </ul>
    <% end %>
    <%= render partial: "app/shared/top", locals: {title: 'Dashboard'} %>
    <div class="container-fluid">
        <div class="row">
            <div>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="tab-settings-account">
                        <div class="settings-wrapper">
                            <%= render "app/shared/alert" %>
                            <%= form_for @user || current_user, :url => app_settings_path, :method => :put do |f| %>
                                <div class="form-group <%= f.object.errors[:first_name].present? ? "has-error" : ""%>">
                                    <label for="input-user-fname">First Name</label>
                                    <%= f.text_field :first_name, :class => "form-control", :placeholder => "First Name", :required => true %>
                                    <% if f.object.errors[:first_name].present? %>
                                      <div class="help-block">First name <%= f.object.errors[:first_name].join(", ") %></div>
                                    <% end %>
                                </div>
                                <div class="form-group <%= f.object.errors[:last_name].present? ? "has-error" : ""%>">
                                    <label for="input-user-lname">Last Name</label>
                                    <%= f.text_field :last_name, :class => "form-control", :placeholder => "Last Name", :required => true %>
                                    <% if f.object.errors[:last_name].present? %>
                                      <div class="help-block">Last name <%= f.object.errors[:last_name].join(", ") %></div>
                                    <% end %>
                                </div>
                                <div class="form-group <%= f.object.errors[:company].present? ? "has-error" : ""%>">
                                    <label for="input-user-compa ny">Company Name</label>
                                    <%= f.text_field :company, :class => "form-control", :placeholder => "Company", :required => true %>
                                    <% if f.object.errors[:company].present? %>
                                      <div class="help-block">Company name <%= f.object.errors[:company].join(", ") %></div>
                                    <% end %>
                                </div>
                                <div class="form-group <%= f.object.errors[:email].present? ? "has-error" : ""%>">
                                    <label for="input-user-email">Email Address</label>
                                    <%= f.text_field :email, :class => "form-control", :placeholder => "Email", :required => true %>
                                    <% if f.object.errors[:email].present? %>
                                      <div class="help-block">Email address <%= f.object.errors[:email].join(", ") %></div>
                                    <% end %>
                                </div>
                                <div class="form-group <%= f.object.errors[:password].present? ? "has-error" : ""%>">
                                    <label for="input-user-password">Password</label>
                                    <%= f.password_field :password, :class => "form-control", :placeholder => "Current Password", :required => true %>
                                    <% if f.object.errors[:password].present? %>
                                      <div class="help-block">Current password <%= f.object.errors[:password].join(", ") %></div>
                                    <% end %>
                                </div>
                                <div class="pull-right">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            <% end %>
                        </div>
                    </div>
                    <div role="tabpanel" class="tab-pane " id="tab-settings-billing">
                        <div class="settings-wrapper">
                            <form>
                                <div class="form-group">
                                    <label for="input-billing-name">First Name</label>
                                    <input type="text" name="user_billing_name" id="input-billing-name" class="form-control" placeholder="John Doe" required="">
                                </div>
                                <div class="form-group">
                                    <label for="input-billing-card">Last Name</label>
                                    <input type="text" name="user_billing_card" id="input-billing-card" class="form-control" placeholder="XXXXXXXXX" required="">
                                </div>
                                <div class="form-group">
                                    <label for="input-billing-exp">Company Name</label>
                                    <input type="text" name="user_billing_exp" id="input-billing-exp" class="form-control" placeholder="MM/YYYY" required="">
                                </div>
                                <div class="form-group">
                                    <label for="input-billing-cvv">Email Address</label>
                                    <input type="text" name="user_billing_cvv" id="input-billing-cvv" class="form-control" placeholder="XXX" required="">
                                </div>
                                <div class="pull-right">
                                    <button type="button" class="btn btn-primary">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div> <!-- tab content End -->
            </div>
        </div>
    </div>
  </div>
</div>
