<div id="wrapper">
  <%= render "app/shared/left" %>
  <div id="page-wrapper">
    <%= render partial: "app/shared/top", locals: {title: 'Dashboard'} %>
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="statistic-box">
            <div class="statistic-box__item">
              <i><%= @deal_stats[:active_deals] %></i><span>ACTIVE DEALS</span>
            </div>
            <div class="statistic-box__item">
              <i><%= @deal_stats[:archived_deals] %></i><span>ARCHIVED DEALS</span>
            </div>
            <div class="statistic-box__item">
              <i><%= @deal_stats[:team_members] %></i><span>TEAM MEMBERS</span>
            </div>
            <div class="statistic-box__item">
              <i><%= @deal_stats[:outside_collaborators] %></i><span>OUTSIDE COLLABORATORS</span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="content-left">
            <div class="panel activity-card">
              <div class="panel-heading">
                <h3 class="category">Document Signed</h3><i class="timestamp">2/29/2016</i>
              </div>
              <div class="panel-body">
                <div class="section-info">
                  <b>PROJECT PANDA : CLOSING:</b> Pre-Closing : Term Sheet
                </div>
                <div class="section-details">
                  <div class="section-details__document signed">
                    <h4>Term Sheet <span class="badge">V9</span></h4>
                    <div class="section-details__collaborators">
                      <a href="#"><%= image_tag "img-avatar-1.png" %></a>
                      <a href="#"><%= image_tag "img-avatar-2.png" %></a>
                      <a href="#"><%= image_tag "img-avatar-6.png" %></a>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="panel activity-card">
              <div class="panel-heading">
                <h3 class="category">Comment Added</h3><i class="timestamp">2/29/2016</i>
              </div>
              <div class="panel-body">
                <div class="section-info">
                  <b>PROJECT PANDA : CLOSING: Corporate Structure, Equity Capital & Records : Meeting Minutes</b>
                </div>
                <div class="section-details">
                  <div class="section-details__comment comment-to">
                    <div class="comment-avatar">
                      <%= image_tag "img-avatar-4.png" %>
                    </div>
                    <div class="comment-message"><span>Sounds good. Thanks!</span></div>
                  </div>
                </div>
              </div>
            </div>

            <div class="panel activity-card">
              <div class="panel-heading">
                <h3 class="category">New Document Version Uploaded</h3><i class="timestamp">2/29/2016</i>
              </div>
              <div class="panel-body">
                <div class="section-info">
                  <b>PROJECT PANDA : CLOSING:</b> Pre-Closing : Term Sheet
                </div>
                <div class="section-details">
                  <div class="section-details__attachment">
                    <div class="attachment-item item-file">
                      <i></i><a href="#">Term Sheet</a>
                      <span class="badge">V9</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="panel activity-card">
              <div class="panel-heading">
                <h3 class="category">Document Uploaded</h3>
              </div>
              <div class="panel-body">
                <div class="section-info">
                  <b>PROJECT PANDA : CLOSING: Corporate Structure, Equity Capital & Records : Meeting Minutes</b>
                </div>
                <div class="section-details">
                  <div class="section-details__attachment">
                      <div class="attachment-item item-file">
                        <i></i><a href="#">Subcompany A</a>
                      </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="panel activity-card">
              <div class="panel-heading">
                <h3 class="category">Collaborator Added</h3>
              </div>
              <div class="panel-body">
                <div class="section-info">
                  <b>PROJECT PANDA</b>
                </div>
                <div class="section-details">
                  <div class="section-details__collaborator">
                    <a href="#">
                      <div class="avatar">
                        <%= image_tag "img-avatar-5.png" %>
                      </div>
                      <h4>Alvin Jones</h4>
                      <span>Ice Miller</span>
                    </a>
                  </div>
                </div>
              </div>
            </div>

            <div class="panel activity-card">
              <div class="panel-heading">
                <h3 class="category">Comment Added</h3><i class="timestamp">2/29/2016</i>
              </div>
              <div class="panel-body">
                <div class="section-info">
                  <b>DILIGENCE: Corporate Structure, Equity Capital & Records : Meeting Minutes</b>
                </div>
                <div class="section-details">
                  <div class="section-details__comment comment-from">
                    <div class="comment-avatar">
                      <%= image_tag "img-avatar-5.png" %>
                    </div>
                    <div class="comment-message"><span>Cancelled due to weather.</span></div>
                  </div>
                </div>
              </div>
            </div>

            <div class="panel activity-card">
              <div class="panel-heading">
                <h3 class="category">Comment Added</h3><i class="timestamp">2/29/2016</i>
              </div>
              <div class="panel-body">
                <div class="section-info">
                  <b>PROJECT PANDA : CLOSING: Corporate Structure, Equity Capital & Records : Meeting Minutes</b>
                </div>
                <div class="section-details">
                  <div class="section-details__comment comment-to">
                    <div class="comment-avatar">
                      <%= image_tag "img-avatar-4.png" %>
                    </div>
                    <div class="comment-message"><span>Looks like weâ€™re missing the June Meeting Minutes.</span></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="content-right">
            <div class="panel summary-card">
              <div class="panel-heading">
                <h3 class="category">DEALS NEARING COMPLETION</h3>
              </div>
              <div class="panel-body">
                <div class="summary-projects">
                  <% @deals_nearing_completion.each do |deal| %>
                    <div class="project-item">
                      <div class="item-percent">
                        <div class="progress-pie-chart" data-percent="<%= deal.completion_percent %>"></div>
                      </div>
                      <div class="item-body">
                        <%= link_to app_deal_path(deal), class: "item-body__project" do %>
                          <div class="title"><%= deal.client_name %> <span class="timestamp"><%= deal.friendly_date %></span></div>
                          <div class="copy"><%= deal.title %> <%= raw (deal.starred_by?(current_user) ? '<span class="star"></span>' : '') %></div>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="panel summary-card">
              <div class="panel-heading">
                <h3 class="category">DEALS BEHIND SCHEDULE</h3>
              </div>
              <div class="panel-body">
                <div class="summary-projects">
                  <% @deals_behind_schedule.each do |deal| %>
                    <div class="project-item">
                      <div class="item-percent">
                        <div class="progress-pie-chart" data-percent="<%= deal.completion_percent %>"></div>
                      </div>
                      <div class="item-body">
                        <%= link_to app_deal_path(deal), class: "item-body__project" do %>
                          <div class="title"><%= deal.client_name %> <span class="timestamp"><%= deal.friendly_date %></span></div>
                          <div class="copy"><%= deal.title %> <%= raw (deal.starred_by?(current_user) ? '<span class="star"></span>' : '') %></div>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="panel summary-card">
              <div class="panel-heading">
                <h3 class="category">RECENTLY UPDATED FILES</h3>
              </div>
              <div class="panel-body">
                <div class="summary-files">
                  <% @recently_updated_files.each do |file| %>
                    <div class="item item-<%= file.class == Document ? 'file' : 'folder'%>">
                      <a href="#" class="details">
                        <i><%= file.try(:file_name) || file.try(:name) %></i>
                        <span>Added by <%= "#{file.try(:creator).try(:first_name) || file.try(:user).try(:first_name)} #{file.try(:creator).try(:last_name) || file.try(:user).try(:first_name)}" %> at <%= file.try(:creator).try(:organization).try(:name) || file.try(:user).try(:organization).try(:name) %></span>
                      </a>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
