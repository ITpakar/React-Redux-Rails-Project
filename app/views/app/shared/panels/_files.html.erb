<div class="panel summary-card">
    <div class="panel-heading">
        <h3 class="category"><%= title %></h3>
    </div>
    <div class="panel-body">
        <div class="summary-files">
            <% if files.empty? %>
              <div class="project-item-empty">
                No recently updated files
              </div>
            <% end %>
            <% files.each do |file| %>
              <div class="item item-<%= file.class == Document ? 'file' : 'folder'%>">
                <a href="#" class="details">
                  <i><%= file.try(:file_name) || file.try(:name) %></i>
                  <span>Added by <%= file.creator.user.first_name %> <%= file.creator.user.last_name %></span>
                </a>
              </div>
            <% end %>
        </div>
    </div>
</div>