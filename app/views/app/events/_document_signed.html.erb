<div class="section-info">
    <b>
        <%= event.eventable.deal_document.deal.title.upcase %> : 
        <%= event.eventable.deal_document.traverse_up_to(Category).try(:name).gsub("Category", '').try(:upcase) %> : 
        <%= event.eventable.deal_document.traverse_up_to(Section).try(:name).try(:upcase) %>
    </b> 
    <%= event.eventable.deal_document.traverse_up_to(Task).title %>
    by <%= event.eventable.name %>
</div>
<div class="section-details">
    <div class="section-details__attachment">
        <div class="attachment-item item-file">
            <i></i><a href="#"><%= event.eventable.deal_document.document.title %></a>
        </div>
    </div>
</div>