<div class="section-info">
    <b>
      <%= event.eventable.deal.title %> 
      <% if event.eventable.traverse_up_to(Category) %>
      : <%= event.eventable.traverse_up_to(Category).try(:name).gsub("Category", '').try(:upcase) %> : <%= event.eventable.traverse_up_to(Section).try(:name).try(:upcase) %>
      <% end %>
    </b>

    <% if event.eventable.traverse_up_to(Task) %>
    : <%= event.eventable.traverse_up_to(Task).title %>
    <% end %>
    <% if event.eventable.traverse_up_to(Folder) %>
    : <%= event.eventable.traverse_up_to(Folder).name %>
    <% end %>
    <% if event.eventable.traverse_up_to(DealDocument) %>
    : <%= event.eventable.traverse_up_to(DealDocument).document.title %>
    <% end %>


</div>
<div class="section-details">
    <div class="section-details__comment comment-to">
        <div class="comment-avatar"><img src="<%= event.eventable.organization_user.user.avatar.path.gsub(Rails.public_path.to_s, '') %>"></div>
        <div class="comment-message"><span><%= event.eventable.comment %></span></div>
    </div>
</div>
