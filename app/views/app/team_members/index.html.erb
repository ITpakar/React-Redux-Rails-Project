<div id="wrapper">
    <%= render "app/shared/left" %>
    <div id="page-wrapper">
      <%= render partial: "app/shared/top", locals: {title: 'Team'} %>
        <div class="content">
            <%= render 'app/shared/flash_messages' %>
            <%= react_component "TeamMembersView", props: {teamMembers: @team} %>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modal-edit-user" tabindex="-1" role="dialog" aria-labelledby="modal-edit-user-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modal-edit-user-label">New User</h4>
            </div>
            <%= form_tag(app_team_members_path, method: "POST") do %>
                <div class="modal-body">
                    <div class="form-group">
                        <%= label_tag :first_name, "First Name" %>
                        <%= text_field_tag :first_name, nil,  placeholder: "John", class: 'form-control', required: true %>
                    </div>

                    <div class="form-group">
                        <%= label_tag :last_name, "Last Name" %>
                        <%= text_field_tag :last_name, nil, class: 'form-control', placeholder: "Doe", required: true %>
                    </div>

                    <div class="form-group">
                        <%= label_tag :email, "Email" %>
                        <%= text_field_tag :email, nil, class: 'form-control', placeholder: "example@doxly.com", required: true %>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
                    <%= button_tag "Create", class: 'btn btn-primary' %>
                </div>
            <% end %>

        </div>
    </div>
</div>