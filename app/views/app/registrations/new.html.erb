<div class="wrap-narrow">
    <div class="box-middle">
        <div class="inner">
            <div class="center-logo"><a href="#"><%= image_tag "logo.svg" %></a></div>
              <% if flash[:notice] %>
                <div class="alert alert-success">
                  <%= flash[:notice] %>
                </div>
              <% end %>
              <% if flash[:errors] %>
                <% flash[:errors].each do |error| %>
                  <div class="alert alert-danger">
                    <%= error %>
                  </div>
                <% end %>
              <% end %>
            <div class="panel panel-window">
                <%= form_for(:user, url: app_user_registration_path, method: :post) do |f|%>
                    <div class="form-group">
                      <label htmlFor="input-email">First Name</label>
                      <%= f.text_field :first_name, id: 'input-first-name', class: 'form-control', placeholder: "John", required: true %>
                    </div>

                    <div class="form-group">
                      <label htmlFor="input-email">Last Name</label>
                      <%= f.text_field :last_name, id: 'input-last-name', class: 'form-control', placeholder: "Doe", required: true %>
                    </div>

                    <div class="form-group">
                      <label htmlFor="input-email">Company Name</label>
                      <%= f.text_field :company, id: 'input-company', class: 'form-control', placeholder: "Your Company", required: true %>
                    </div>

                    <div class="form-group">
                      <label htmlFor="input-email">Email Address</label>
                      <%= f.text_field :email, id: 'input-email', class: 'form-control', placeholder: "example@doxly.com", required: true %>
                    </div>

                    <div class="form-group">
                      <label htmlFor="input-password">Password</label>
                      <%= f.password_field :password, id: 'input-password', class: 'form-control', placeholder: "Required", required: true %>
                    </div>

                    <div class="container-fluid">
                      <div class="row">
                        <div class="col-xs-6">
                          <span>
                            By signing up, you agree to the Terms of Service and Privacy Policy.
                          </span>
                        </div>
                        <div class="col-xs-6 text-right">
                            <%= f.submit 'Sign Up', class: 'btn btn-primary' %>
                        </div>
                      </div>
                    </div>
                <% end %>
            </div>

            
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-6">
                        <div class="form-group">
                          <%= link_to "Forgot your password?", new_app_user_password_path %>
                        </div>
                    </div>
                    <div class="col-xs-6 text-right">
                        Already have an account? <%= link_to "Sign In", new_app_user_session_path %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>